            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
      
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<a name="anchor"></a>
    
      
<div class="col-md-12">
  <div id="content">
   
  
    
	<%= yield %>
  </div>
  
  <%= link_to "Back to Top", @post, anchor: "anchor", style: "float:right" %>



</div>

<script>
// init

var $container = $('#content');
     $(window).load(function(){
$container.isotope({


  itemSelector: '.item',
  layoutMode: 'masonry'
 
});
});

</script>
	</body>
  
	</html>
